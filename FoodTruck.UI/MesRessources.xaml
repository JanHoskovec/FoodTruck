    <ImageBrush x:Key="Jus" ViewportUnits="RelativeToBoundingBox"
                   Viewport="0 0 1 1" ImageSource="./Media/Jus.jpg"></ImageBrush>
    <ImageBrush x:Key="Gateau" ViewportUnits="RelativeToBoundingBox"
                   Viewport="0 0 1 1" ImageSource="./Media/GateauChoc.jpg"></ImageBrush>
    <ImageBrush x:Key="Tartare" ViewportUnits="RelativeToBoundingBox"
                   Viewport="0 0 1 1" ImageSource="./Media/Tartare.png"></ImageBrush>
</ResourceDictionary>